{% extends '@PositibeCmf/layout.html.twig' %}

{% block title %}Información de contacto{% endblock %}
{% block subtitle %}Editar información de contacto{% endblock %}
{% set menu_active = 'contact' %}
{% set content_menu = 'contact_information' %}
{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}

{% block breadcrumb_list %}
    <li>
        <i class="fa fa-angle-right"></i>
        <a href="{{ path('positibe_contact_information_show') }}">Información de contacto</a>
    </li>
    <li>
        <i class="fa fa-angle-right"></i>
        {{ contact_information.enterpriseName | default('-')}}
    </li>
{% endblock %}

{% block content %}
    {{ form_start(form, {'attr': {'class': 'inbox-compose form-horizontal' }}) }}
    <input type="hidden" name="_method" value="PUT"/>

    <div class="portlet light ">
        <div class="portlet-title tabbable-line">
            <div class="caption caption-md">
                <i class="icon-globe theme-font hide"></i>
                <span class="caption-subject font-green-sharp bold uppercase"><i class="fa fa-info-circle"></i> Datos de información de contacto</span>
            </div>
            <div class="actions btn-set">
                <a href="{{ path('positibe_contact_information_show') }}"
                   name="back" class="btn btn-default btn-circle"><i class="fa fa-angle-left"></i> Atras</a>
                <a href="{{ app.request.server.get('REQUEST_URI') }}" class="btn btn-default btn-circle "><i
                            class="fa fa-reply"></i> Resetear</a>
                <button class="btn green-haze btn-circle" type="submit"><i class="fa fa-check"></i> Guardar</button>
            </div>

        </div>
        <div class="portlet-body">
            <div class="tabbable">

                <ul class="nav nav-tabs">
                    <li class="active">
                        <a href="#form_contact_tab_basic" data-toggle="tab" aria-expanded="true">Información
                            básica</a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active" id="form_contact_tab_basic">
                        {{ form_row(form.enterpriseName) }}
                        {{ form_row(form.streetAddress) }}
                        {{ form_row(form.regionAddress) }}
                        {{ form_row(form.phone) }}
                        {{ form_row(form.email) }}
                    </div>
                </div>
            </div>
            <div class="form-actions text-right">
                <a href="{{ path('positibe_contact_information_show') }}" class="btn btn-default">Cancelar</a>
                <button class="btn btn-primary"><i class="fa fa-check"></i> Guardar</button>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}