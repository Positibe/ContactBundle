{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}
{% from '@PositibeCmf/_macros.html.twig' import delete_button %}

<div class="portlet light ">
    <div class="portlet-title tabbable-line">
        <div class="caption caption-md">
            <i class="icon-globe theme-font hide"></i>
            <span class="caption-subject font-green-sharp bold uppercase"><i class="fa fa-user"></i> Datos de la solicitud de contacto</span>
        </div>
        <div class="actions btn-set">
            <a href="{{ path('positibe_contact_index') }}"
               name="back" class="btn btn-default btn-circle"><i class="fa fa-angle-left"></i> Atras</a>
            <a href="{{ app.request.server.get('REQUEST_URI') }}" class="btn btn-default btn-circle "><i
                        class="fa fa-reply"></i> Resetear</a>
            <button class="btn green-haze btn-circle" type="submit"><i class="fa fa-check"></i> Guardar</button>
            {% if contact is defined and contact.id is not null %}
                {{ delete_button('positibe_contact_remove') }}
            {% endif %}
        </div>

    </div>
    <div class="portlet-body">
        <div class="tabbable">

            <ul class="nav nav-tabs">
                <li class="active">
                    <a href="#form_contact_tab_basic" data-toggle="tab" aria-expanded="true">Información
                        básica</a>
                </li>
                <li class="pull-right">
                    {{ form_widget(form.state, {'attr': {'class': 'dropdown pull-right btn btn-circle' }}) }}
                </li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active" id="form_contact_tab_basic">
                    {{ form_row(form.name) }}
                    {{ form_row(form.email) }}
                    {{ form_row(form.contactMethod) }}
                    {{ form_row(form.message) }}
                </div>
            </div>
        </div>
        <div class="form-actions text-right">
            <a href="{{ path('positibe_contact_index') }}" class="btn btn-default">Cancelar</a>
            <button class="btn btn-primary"><i class="fa fa-check"></i> Guardar</button>
        </div>
    </div>
</div>